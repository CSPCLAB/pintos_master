#!/bin/bash
# List of C source files to format
files=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(c|h)$')

if [ -z "$files" ]; then
    exit 0
fi

echo "Running clang-format..."
for file in $files; do
    clang-format -i "$file"
    git add "$file"
done

echo "Clang-format applied to staged files."

